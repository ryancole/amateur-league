{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Transform": "AWS::Serverless-2016-10-31",
  "Resources": {
    "HandleApiRequestFunction": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "CodeUri": "lib/",
        "Handler": "index.handler",
        "Runtime": "nodejs8.10",
        "Events": {
          "ApiRequest": {
            "Type": "Api",
            "Properties": {
              "Path": "/",
              "Method": "post"
            }
          }
        }
      }
    }
  }
}
